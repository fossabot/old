    "/lit-html.d.ts.map",
    "/directive-helpers.js",
    "/directive-helpers.js.map",
    "/directive-helpers.d.ts",
    "/directive-helpers.d.ts.map",
    "/async-directive.js",
    "/async-directive.js.map",
    "/async-directive.d.ts",
    "/async-directive.d.ts.map",
    "/directive.js",
    "/directive.js.map",
    "/directive.d.ts",
    "/directive.d.ts.map",
    "/lib/",
    "/directives/",
    "/polyfills",
    "/src/",
    "/ts3.4/",
    "!/src/test/"

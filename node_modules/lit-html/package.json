{
  "name": "lit-html",
  "version": "1.4.1",
  "description": "HTML template literals in JavaScript",
  "license": "BSD-3-Clause",
  "homepage": "https://lit-html.polymer-project.org/",
  "repository": "Polymer/lit-html",
  "type": "module",
  "main": "lit-html.js",
  "module": "lit-html.js",
  "typings": "lit-html.d.ts",
  "typesVersions": {
